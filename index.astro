---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout>
  <section
    class="relative flex flex-col items-center justify-center min-h-screen bg-cover bg-center"
    style="background-image: url('../../images/ocean.gif');"
  >
    <!-- (Optional) overlay to darken the GIF for better text contrast -->
   

    <!-- Content goes above the overlay, so give it a higher z-index -->
    <div class="relative z-10 text-center p-8">
      <h1 class="text-7xl font-extrabold mb-4">Embark on Your Adventure</h1>
      <p class="text-xl mb-8">A journey awaits you in the mysterious realm of possibilities...</p>
      <a href="/play" class="px-6 py-3 bg-blue-600 rounded hover:bg-blue-700 transition">
        Begin
      </a>
    </div>
  </section>
</BaseLayout>
